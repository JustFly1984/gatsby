{
  "name": "using-cypress",
  "private": true,
  "description": "Gatsby example site that shows how to write accessibility tests with Cypress and axe.",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "cy:open": "cypress open --browser chrome --e2e",
    "test:e2e": "CYPRESS_SUPPORT=y start-server-and-test develop http://localhost:8000 cy:open",
    "cy:run": "CYPRESS_baseUrl=http://localhost:9000 cypress run --browser chrome",
    "test:e2e:ci": "CYPRESS_SUPPORT=y pnpm run build && start-server-and-test serve http://localhost:9000 cy:run"
  },
  "dependencies": {
    "gatsby": "next",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "0.5.1",
    "@testing-library/cypress": "10.0.1",
    "axe-core": "4.9.0",
    "cypress": "13.7.3",
    "cypress-axe": "1.5.0",
    "gatsby-cypress": "3.13.1",
    "start-server-and-test": "2.0.3",
    "typescript": "5.4.5"
  }
}
